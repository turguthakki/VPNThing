<Window x:Class="VPNThing.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="VPN Thing - Mullvad WireGuard Manager"
        Height="650" Width="950"
        MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Theme Resources (will be populated by ThemeManager) -->

        <ContextMenu x:Key="TrayContextMenu">
            <MenuItem Header="Open" Click="TrayOpen_Click" FontWeight="Bold"/>
            <Separator/>
            <MenuItem Header="Connect" Click="TrayConnect_Click" IsEnabled="{Binding IsConnectEnabled}"/>
            <MenuItem Header="Disconnect" Click="TrayDisconnect_Click" IsEnabled="{Binding IsDisconnectEnabled}"/>
            <Separator/>
            <MenuItem Header="Update Locations" Click="TrayUpdateLocations_Click"/>
            <Separator/>
            <MenuItem Header="Exit" Click="TrayExit_Click"/>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="VPN Thing"
                        ContextMenu="{StaticResource TrayContextMenu}"
                        TrayLeftMouseUp="TrayIcon_TrayLeftMouseUp"
                        Visibility="Visible">
            <tb:TaskbarIcon.IconSource>
                <DrawingImage>
                    <DrawingImage.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Brush="Blue">
                                <GeometryDrawing.Geometry>
                                    <EllipseGeometry Center="8,8" RadiusX="7" RadiusY="7"/>
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                        </DrawingGroup>
                    </DrawingImage.Drawing>
                </DrawingImage>
            </tb:TaskbarIcon.IconSource>
        </tb:TaskbarIcon>

        <TabControl Margin="10" ui:ThemeManager.RequestedTheme="Default">
            <!-- Connection Tab -->
            <TabItem Header="Connection">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status -->
                    <Border Grid.Row="0" ui:ControlHelper.CornerRadius="6" Padding="12" Margin="0,0,0,10"
                            Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#FF6B46C1"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock x:Name="StatusLabel" Text="Disconnected" FontWeight="SemiBold"
                                      VerticalAlignment="Center" FontSize="14"/>
                            <TextBlock x:Name="ServerLabel" Text="" Margin="20,0,0,0"
                                      VerticalAlignment="Center" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- WireSock Status -->
                    <Border Grid.Row="1" x:Name="WireSockStatusBorder"
                            ui:ControlHelper.CornerRadius="6" Padding="12" Margin="0,0,0,10"
                            Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="WireSockStatusLabel" Text="WireSock VPN Client not found" FontWeight="SemiBold"
                                      FontSize="14"/>
                            <Button x:Name="InstallWireSockButton" Content="Download and Install WireSock"
                                    Click="InstallWireSock_Click" Visibility="Collapsed" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Server Selection -->
                    <Grid Grid.Row="2" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Server:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1" x:Name="ServerComboBox" DisplayMemberPath="friendlyName"
                                  SelectionChanged="ServerComboBox_SelectionChanged" Margin="0,0,10,0"/>
                        <Button Grid.Column="2" Content="Refresh" Click="RefreshServers_Click"/>
                    </Grid>

                    <!-- Connection Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button x:Name="ConnectButton" Content="Connect" Click="Connect_Click"
                                IsEnabled="{Binding IsConnectEnabled}" Style="{DynamicResource AccentButtonStyle}"
                                Margin="0,0,10,0" MinWidth="100"/>
                        <Button x:Name="DisconnectButton" Content="Disconnect" Click="Disconnect_Click"
                                IsEnabled="{Binding IsDisconnectEnabled}" MinWidth="100"/>
                    </StackPanel>

                    <!-- Connection Log -->
                    <Grid Grid.Row="4" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Connection Log" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,8"/>
                        <Border Grid.Row="1" ui:ControlHelper.CornerRadius="6" BorderThickness="1"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox x:Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap"
                                         BorderThickness="0" Background="Transparent"
                                         FontFamily="Consolas" FontSize="11" Padding="8"
                                         MinHeight="150"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer>
                    <ui:SimpleStackPanel Margin="16" Spacing="16">
                        <!-- Configuration -->
                        <ui:SimpleStackPanel Spacing="12">
                            <TextBlock Text="Configuration" FontSize="18" FontWeight="SemiBold"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Source Directory:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="SourceDirectoryTextBox" IsReadOnly="True" Margin="0,0,10,8"/>
                                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Click="BrowseSourceDirectory_Click" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="WireSock Path:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="WireSockPathTextBox" IsReadOnly="True" Margin="0,0,10,8"/>
                                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Click="BrowseWireSockPath_Click" Margin="0,0,0,8"/>

                                <ui:SimpleStackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                    <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows"
                                              Checked="StartWithWindows_Changed" Unchecked="StartWithWindows_Changed"/>
                                    <Button Content="Update Locations" Click="UpdateLocations_Click"/>
                                </ui:SimpleStackPanel>
                            </Grid>
                        </ui:SimpleStackPanel>

                        <!-- UI Preferences -->
                        <ui:SimpleStackPanel Spacing="12">
                            <TextBlock Text="UI Preferences" FontSize="18" FontWeight="SemiBold"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Theme:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ThemeComboBox"
                                          Width="200" HorizontalAlignment="Left" Margin="0,0,0,8"
                                          SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="System (Auto)" Tag="System"/>
                                    <ComboBoxItem Content="Light" Tag="Light"/>
                                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                                </ComboBox>

                                <ui:SimpleStackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="16" Margin="0,8,0,0">
                                    <CheckBox x:Name="AutoConnectCheckBox" Content="Auto Connect"
                                              Checked="AutoConnect_Changed" Unchecked="AutoConnect_Changed"/>
                                    <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to Tray"
                                              Checked="MinimizeToTray_Changed" Unchecked="MinimizeToTray_Changed"/>
                                </ui:SimpleStackPanel>
                            </Grid>
                        </ui:SimpleStackPanel>

                        <!-- Process Management -->
                        <ui:SimpleStackPanel Spacing="12">
                            <TextBlock Text="Process Management" FontSize="18" FontWeight="SemiBold"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="150"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Include Processes -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Include Processes (VPN routing):" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" ui:ControlHelper.CornerRadius="4"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                                    <ListBox x:Name="IncludeProcessesListBox" BorderThickness="0"/>
                                </Border>
                                <ui:SimpleStackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                    <TextBox x:Name="IncludeProcessTextBox" MinWidth="160" ui:ControlHelper.PlaceholderText="Process name..."/>
                                    <Button Content="Add" Click="AddIncludeProcess_Click"/>
                                    <Button Content="Remove" Click="RemoveIncludeProcess_Click"/>
                                </ui:SimpleStackPanel>

                                <!-- Exclude Processes -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Exclude Processes (Direct routing):" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <Border Grid.Row="1" Grid.Column="2" BorderThickness="1" ui:ControlHelper.CornerRadius="4"
                                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                                    <ListBox x:Name="ExcludeProcessesListBox" BorderThickness="0"/>
                                </Border>
                                <ui:SimpleStackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                    <TextBox x:Name="ExcludeProcessTextBox" MinWidth="160" ui:ControlHelper.PlaceholderText="Process name..."/>
                                    <Button Content="Add" Click="AddExcludeProcess_Click"/>
                                    <Button Content="Remove" Click="RemoveExcludeProcess_Click"/>
                                </ui:SimpleStackPanel>

                                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                                        Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                                        ui:ControlHelper.CornerRadius="4" Padding="12" Margin="0,16,0,0">
                                    <TextBlock TextWrapping="Wrap" FontSize="12">
                                        <Run FontWeight="SemiBold">Include:</Run> Only listed processes will use VPN.<LineBreak/>
                                        <Run FontWeight="SemiBold">Exclude:</Run> Listed processes will bypass VPN (direct connection).<LineBreak/>
                                        If both lists are empty, all traffic goes through VPN. Include mode takes priority.
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </ui:SimpleStackPanel>
                    </ui:SimpleStackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer>
                    <ui:SimpleStackPanel Margin="24" Spacing="20">
                        <ui:SimpleStackPanel Spacing="8">
                            <TextBlock Text="VPN Thing" FontSize="24" FontWeight="SemiBold"/>
                            <TextBlock Text="Mullvad WireGuard Manager" FontSize="16" Opacity="0.8"/>
                            <TextBlock Text="Version 1.0.0" FontSize="14" Opacity="0.6"/>
                        </ui:SimpleStackPanel>

                        <TextBlock Text="A GUI application for managing Mullvad WireGuard VPN connections using WireSock VPN Client."
                                   TextWrapping="Wrap" FontSize="14"/>

                        <ui:SimpleStackPanel Spacing="12">
                            <TextBlock Text="Features" FontSize="16" FontWeight="SemiBold"/>
                            <ui:SimpleStackPanel Spacing="4" Margin="16,0,0,0">
                                <TextBlock Text="• Automatic country/city database updates from GitHub"/>
                                <TextBlock Text="• System tray integration with minimize support"/>
                                <TextBlock Text="• Auto-start with Windows option"/>
                                <TextBlock Text="• Process-based VPN routing (include/exclude)"/>
                                <TextBlock Text="• WireSock VPN Client integration"/>
                                <TextBlock Text="• Real-time connection status monitoring"/>
                                <TextBlock Text="• Modern dark/light theme support"/>
                            </ui:SimpleStackPanel>
                        </ui:SimpleStackPanel>

                        <ui:SimpleStackPanel Spacing="12">
                            <TextBlock Text="Requirements" FontSize="16" FontWeight="SemiBold"/>
                            <ui:SimpleStackPanel Spacing="4" Margin="16,0,0,0">
                                <TextBlock Text="• Windows 7 or later"/>
                                <TextBlock Text="• Administrator privileges"/>
                                <TextBlock Text="• WireSock VPN Client (downloaded automatically if missing)"/>
                                <TextBlock Text="• Internet connection for location updates"/>
                            </ui:SimpleStackPanel>
                        </ui:SimpleStackPanel>
                    </ui:SimpleStackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
